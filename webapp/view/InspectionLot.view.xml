<mvc:View controllerName="com.kaar.qualityportal.controller.InspectionLot"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page title="Inspection Lots" showNavButton="true" navButtonPress="onNavBack">
        <headerContent>
            <Button icon="sap-icon://refresh" press="onRefresh" tooltip="Refresh Data"/>
        </headerContent>
        <Table id="inspectionTable" items="{inspection>/ZKSJ_INSPECTION_QP}" inset="false" growing="true" growingThreshold="100">
            <columns>
                <Column><Text text="Lot Number" /></Column>
                <Column><Text text="Material" /></Column>
                <Column><Text text="Plant" /></Column>
                <Column><Text text="Quantity" /></Column>
                <Column><Text text="Usage Decision" /></Column>
            </columns>
            <items>
                <ColumnListItem type="Navigation" press="onPressLot">
                    <cells>
                        <Text text="{inspection>InspectionLot}" />
                        <Text text="{inspection>MaterialNumber}" />
                        <Text text="{inspection>Plant}" />
                        <Text text="{inspection>LotQuantity} {inspection>UoM}" />
                        <Text text="{inspection>UsageDecisionCode}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
